<?xml version="1.0"?>
<launch>

  <arg name="model" default="$(find-pkg-share lab3)/urdf/robot_gazebo.urdf" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
    <param name="robot_description" value="$(command 'cat $(var model)')"/>
    <param name="use_sim_time" value="true" />
  </node>

  <!-- Start Ignition Gazebo with empty world -->
  <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
    <arg name="gz_args" value="-r empty.sdf"/>
  </include>

  <!-- Spawn the robot into Ignition -->
  <node pkg="ros_gz_sim" exec="create" name="spawn_my_robot" output="screen" args="-name robot -topic /robot_description"/>

</launch>
